<% @custom_fields.only_parents.each do |field| %>
  <%# TODO: refactor to field.display or display_field(field) %>
  <%= field.inspect %>
  <% case field.field_type %>
  <% when 'video' %>
    <%= bp_display_video field.value %>
  <% when 'image' %>
    <%= image_tag field.file.url %>
  <% when 'audio' %>
    <%= field.value %>
  <% when 'file' %>
    <%= field.file %>
  <% when 'date' %>
    <%= field.value %>
  <% when 'email' %>
    <%= field.value %>
  <% when 'number' %>
    <%= field.value %>
  <% when 'gallery' %>
    <%= field.to_a %>
  <% else %>
    <%= field.value %>
  <% end %>

<% end %> 
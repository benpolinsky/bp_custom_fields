<div class='nested-fields'>  
  <div class='field_type'>
    <div class='field'>
      <%= f.label :field_type, "Field Type: " %>
      <%= f.select :field_type, options_for_select(BpCustomFields::FieldTemplate.field_type_options, f.object.field_type), {prompt: "Select Field Type"}, {class: "field-template-select-field-type"} %>
    </div>
  </div>
  
  <div class='field_options'>
    
    <div class='field'>
      <%= f.label :name, class: "form-label"  %>
      <%= f.text_field :name, class: "form-control field_template-name" %>
    </div>
    
    <div class='field'>
      <%= f.label :label, class: "form-label"  %>
      <%= f.text_field :label, class: "form-control" %>
    </div>
    
    <div class='field'>
      <%= f.label :min, class: "form-label"  %>
      <%= f.text_field :min, class: "form-control" %>
    </div>
    
    <div class='field'>
      <%= f.label :max, class: "form-label"  %>
      <%= f.text_field :max, class: "form-control" %>  
    </div>

    <div class='field'>
      <%= f.label :prepend, class: "form-label" %>
      <%= f.text_field :prepend, class: "form-control" %>      
    </div>
    
    <div class='field'>
      <%= f.label :append, class: "form-label" %>
      <%= f.text_field :append, class: "form-control" %>      
    </div>

    <div class='field'>
      <%= f.label :required, class: "form-label" %>
      <%= f.check_box :required, class: "form-control" %>      
    </div>
    
    <div class='field'>
      <%= f.label :instructions, class: "form-label" %>
      <%= f.text_area :instructions, class: "form-control" %>
    </div>
    
    <div class='field'>
      <%= f.label :default_value, class: "form-label" %>
      <%= f.text_area :default_value, class: "form-control" %>
    </div>
    
    <div class='field additional-option text editor'>
      <%= f.label :rows, class: "form-label" %>
      <%= f.number_field :rows, class: "form-control" %>
    </div>
    
    <div class='field additional-option editor'>
      <%= f.label :toolbar, class: "form-label" %>
      <%= f.select :toolbar, options_for_select(["None", "Basic", "Full"], toolbar_select_default(f)), class: "form-control" %>
    </div>
    
    <div class='field additional-option date date_and_time'>
      <%= f.label :date_format, "Date Format", class: "form-label" %>
      <%= f.text_field :date_format, class: "form-control" %>
    </div>
    
    <div class='field additional-option date_and_time time'>
      <%= f.label :time_format, "Time Format", class: "form-label" %>
      <%= f.text_field :time_format, class: "form-control" %>
    </div>
  
    <div class='field additional-option file image'>
      <%= f.label :accepted_file_types, class: "form-label" %>
      <%= f.text_field :accepted_file_types, class: "form-control" %>
    </div>
    
    <div class='field additional-option dropdown checkboxes'>
      <%= f.label :choices, class: "form-label" %>
      <%= f.text_area :choices, class: "form-control" %>
    </div>  
    
    <div class='field additional-option dropdown checkboxes'>
      <%= f.label :multiple, class: "form-label" %>
      <%= f.check_box :multiple, class: "form-control" %>
    </div>

    <div class='field additional-option repeater'>
      <div class='field_template_children-fields'>  
        <%= f.fields_for :children do |c| %>
          <%= render :partial => 'child_field_templates', locals: {f: c, remove_label: "Remove Subfield"} %>
        <% end %>
        <div class='links'>
          <%= link_to_add_association 'Add Subfield', f, :children, {partial: "child_field_templates", render_options: {locals: {remove_label: "Remove Subfield"}}} %>  
        </div>
      </div>
    </div>
    
  
    <div class='field additional-option tab'>
      <div class='field_template_children-fields'>  
        <%= f.fields_for :children do |c| %>
          <%= render :partial => 'child_field_templates', locals: {f: c, remove_label: "Remove Tab Field"} %>
        <% end %>
        <div class='links'>
          <%= link_to_add_association 'Add Tab Field', f, :children, {partial: "tab_template", render_options: {locals: {remove_label: "Remove Tab Field"}}} %>  
        </div>
      </div>
    </div>
    
    <div class='field additional-option flexible_content'>
      <div class='field_template_children-fields'>  
        <%= f.fields_for :children do |c| %>
          <%= render :partial => 'layout_fields', locals: {f: c, remove_label: "Remove Layout"} %>
        <% end %>
        <div class='links'>
          <%= link_to_add_association 'Add Layout', f, :children, {partial: "layout_fields", render_options: {locals: {remove_label: "Remove Layout"}}} %>  
        </div>
      </div>
    </div>
    
    
    <%= link_to_remove_association "remove field", f %>
  </div>
</div>

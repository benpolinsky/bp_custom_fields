<div class='nested-fields'>  
    <div class='field resource-select'>
      <%= f.label :resource, "Choose a Resource/Model" %>
      <%= f.select :resource, options_for_select(@app_models, f.object.resource), {prompt: "Select Field Type"} %>
    </div>
    
    <div class='field resource-id'>
      <%= f.label :resource_id, "Enter a resource id" %>
      <%= f.text_field :resource_id %>
    </div>


    <%= link_to_remove_association "remove appearance", f %>

</div>
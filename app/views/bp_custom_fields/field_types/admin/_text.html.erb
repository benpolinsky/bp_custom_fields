<div class="custom-field text-field <%= field_template.name.downcase.underscore %>">
  <%= builder.hidden_field :field_template_id %>
  <%= builder.label :value, field_template.label, class: "form-label" %>
  <%= content_tag(:div, field_template.instructions, class: "field-instructions") unless field_template.instructions.blank? %>
  <%= builder.text_area :value, class: "form-control" %>
</div>
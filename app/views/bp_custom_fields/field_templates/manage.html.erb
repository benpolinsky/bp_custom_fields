<h2>Add Fields for <%= @group_template.name %></h2>
<%= form_for @group_template do |f| %>
  <%= f.fields_for :field_templates do |field| %>
    <%= render :partial => 'field_template_fields', locals: {f: field} %>
    <div class='links'>
      <%= link_to_add_association 'Add Field', f, :field_templates %>  
    </div>
  <% end %>

  <%= f.submit "Submit", :disable_with => 'Submiting...' %>
<% end %>